<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardPeternak"
    android:layout_margin="10dp"
    android:background="@color/colorBgWhite"
    card_view:cardCornerRadius="5dp"
    card_view:cardBackgroundColor="@color/colorBgWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBgWhite">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imgUtama"
            android:layout_margin="10dp"

            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNama"
            android:text="Test"
            android:layout_alignTop="@+id/imgUtama"
            android:layout_toRightOf="@+id/imgUtama"
            android:layout_toEndOf="@+id/imgUtama"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"/>


        <TextView
            android:id="@+id/txtKapasitasTernak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNama"
            android:layout_toEndOf="@+id/imgUtama"
            android:layout_toRightOf="@+id/imgUtama"
            android:text="Kapasitas Ternak : "
            android:textColor="#000000"/>

        <ProgressBar
            android:id="@+id/progresStatus"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtKapasitasTernak"
            android:layout_toEndOf="@+id/imgUtama"
            android:layout_toRightOf="@+id/imgUtama"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:progressDrawable="@drawable/custom_progres_bar"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>