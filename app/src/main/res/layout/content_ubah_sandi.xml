<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dragmetohell.cattloo.UbahSandiActivity"
    tools:showIn="@layout/activity_ubah_sandi"
    android:background="#e7e7e7">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/drawer_bg" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewProfl"
        android:layout_width="94dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/dracko"
        app:civ_border_color="#FFF"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewProfl"
        android:layout_centerHorizontal="true"
        android:text="Hello Dracko"
        android:textColor="#FFF"
        android:textSize="18dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView11"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/formUbah">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passLama"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_pressed"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Password Lama" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passBaru"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_pressed"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Password Baru"
            android:layout_below="@+id/passLama"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confPass"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_pressed"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Password Baru"
            android:layout_below="@+id/passBaru"/>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah Sandi"
        android:id="@+id/btnUbah"
        android:layout_below="@+id/formUbah"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_presed"
        android:textColor="#ffffff"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


</RelativeLayout>
